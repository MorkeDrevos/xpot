generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  xHandle   String   @unique
  createdAt DateTime @default(now())
  tickets   Ticket[]
  wallets   Wallet[]
}

model Wallet {
  id        String   @id @default(cuid())
  address   String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  tickets   Ticket[]
  createdAt DateTime @default(now())
}

model Draw {
  id        String   @id @default(cuid())
  isClosed  Boolean  @default(false)

  tickets   Ticket[] @relation("DrawTickets")

  winnerId  String?  @unique
  winner    Ticket?  @relation("DrawWinner", fields: [winnerId], references: [id])
}

model Ticket {
  id         String  @id @default(cuid())

  drawId     String
  draw       Draw    @relation("DrawTickets", fields: [drawId], references: [id])

  winnerOf   Draw?   @relation("DrawWinner")
}
